@inject SignInManager<ApplicationUser> sinInManager
@inject UserManager<ApplicationUser> UserManager


<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Admin/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Admin/vendors/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Admin/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Admin/images" />

    @RenderSection("Styles", false)
</head>
<body>


   <div class="container-scroller">

        <!-- partial:partials/_horizontal-navbar.html -->
        @{
            if (User.IsInRole("Manager"))
            {
                <div class="horizontal-menu">
                    <nav class="navbar top-navbar col-lg-12 col-12 p-0">
                        <div class="container">
                            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                                <a class="navbar-brand brand-logo" href="index.html"><img src="~/Admin/images/mt-removebg-preview.png" alt="logo" /></a>
                                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/Admin/images/mt-removebg-preview.png" alt="logo" /></a>
                            </div>
                            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                                <ul class="navbar-nav mr-lg-2">
                                    <li class="nav-item nav-search d-none d-lg-block">
                                        <div class="input-group">
                                            <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                                                <span class="input-group-text" id="search">
                                                    <i class="mdi mdi-magnify"></i>
                                                </span>
                                            </div>
                                            <input type="text" class="form-control" id="navbar-search-input" placeholder="Search projects" aria-label="search" aria-describedby="search">
                                        </div>
                                    </li>
                                </ul>

                                <ul class="navbar-nav navbar-nav-right">
                                    <li class="nav-item nav-profile dropdown">
                                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" aria-expanded="false">
                                            <div class="nav-profile-img">
                                                <img src="~/Admin/images/AbdoLo.jpg" alt="image">
                                                <span class="availability-status online"></span>
                                            </div>
                                            <div class="nav-profile-text">
                                                <p class="text-black">Abderrahmane AHMED </p>
                                            </div>
                                        </a>

                                    </li>


                                    <li class="nav-item dropdown">
                                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="https://mail.google.com/mail/u/0/#inbox" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="mdi mdi-email-outline"></i>
                                            <span class="count-symbol bg-warning"></span>
                                        </a>

                                    </li>

                                    <li class="nav-item nav-logout d-none d-lg-flex">
                                        <a asp-area="" asp-controller="Users" asp-action="LogOut">
                                            <i class="mdi mdi-power"></i>
                                        </a>
                                    </li>

                                </ul>
                                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="horizontal-menu-toggle">
                                    <span class="mdi mdi-menu"></span>
                                </button>
                            </div>
                        </div>
                    </nav>
                    <nav class="bottom-navbar">
                        <div class="container">
                            <ul class="nav page-navigation">


                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                                        <i class="mdi mdi-home menu-icon"></i>
                                        <span class="menu-title">Dashboard</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="Items" asp-action="List" class="nav-link">
                                        <i class="mdi mdi-file menu-icon"></i>
                                        <span class="menu-title">Items</span>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a asp-controller="ItemsType" asp-action="List" class="nav-link">

                                        <i class="mdi mdi-clipboard-text menu-icon"></i>
                                        <span class="menu-title">ItemsType</span>

                                    </a>

                                </li>


                                <li class="nav-item mega-menu">
                                    <a asp-controller="Categories" asp-action="List" class="nav-link">
                                        <i class="mdi mdi-view-dashboard menu-icon"></i>
                                        <span class="menu-title">Categories</span>

                                    </a>
                                </li>






                                <li class="nav-item">
                                    <a href=""  class="nav-link" target="_blank">
                                        <i class="mdi mdi-file-document-box menu-icon"></i>
                                        <span class="menu-title">Documentation</span>
                                    </a>
                                </li>


                            </ul>
                        </div>
                    </nav>
                </div>
                <!-- End Header -->
            }
        }
            <!-- Start Main Content -->
        <div class="content">
                            @RenderBody()
        </div>
        <!-- End Main Content -->
        <!-- Start Footer -->
        <footer class="border-top footer text-muted">
            <div class="app-page">
                &copy; 2025 - DrivingLicense -
                <a class="app-page"  asp-area="" asp-controller="Home" asp-action="Index">Application</a>
            </div>
        </footer>
        <!-- Start Footer -->
        @inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

   </div>

    <!-- plugins:js -->
    <script src="~/Admin/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Admin/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Admin/js/off-canvas.js"></script>
    <script src="~/Admin/js/hoverable-collapse.js"></script>
    <script src="~/Admin/js/misc.js"></script>
    <script src="~/Admin/js/settings.js"></script>
    <script src="~/Admin/js/todolist.js"></script>
    <script src="~/Admin/js/jquery.cookie.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/dashboard.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <!-- End custom js for this page -->
    @RenderSection("Scripts", false);
</body>
</html>
